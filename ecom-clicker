let rivalsDefeated=0;
function renderRivals(){
  const el=document.getElementById('rivals');
  el.innerHTML=rivals.map(r=>{
    const wasDefeated=r.defeated;
    if(!r.defeated && perSecond>=r.speed){
      r.defeated=true;rivalsDefeated++;
      showPopup('‚öîÔ∏è','Legy≈ëzted: '+r.name,'Most m√°r te vagy a nagyobb!','‚öîÔ∏è Riv√°lis');
      addLog(`‚öîÔ∏è Legy≈ëzted: <span>${r.name}</span>!`);
      spawnConfettiBurst();
    }
    const isNext=!r.defeated && (rivals.indexOf(r)===0 || rivals[rivals.indexOf(r)-1].defeated);
    let statusTxt='',statusCls='far';
    if(r.defeated){statusTxt='‚úì Legy≈ëzve';statusCls='beaten'}
    else if(isNext){
      const pct=Math.min(99,Math.floor((perSecond/r.speed)*100));
      statusTxt=pct+'%';statusCls='ahead';
    } else{statusTxt=fmt(r.speed)+'/mp';statusCls='far'}
    return `<div class="rival ${r.defeated?'defeated':''}${isNext?' current':''}">
      <div class="rival-icon">${r.icon}</div>
      <div class="rival-info"><div class="rival-name">${r.name}</div><div class="rival-speed">${r.defeated?'Volt: ':''} ${fmt(r.speed)} Ft/mp</div></div>
      <div class="rival-status ${statusCls}">${statusTxt}</div>
    </div>`;
  }).join('');
}

// === Seasons ===
const seasons=[
  {name:'‚òÄÔ∏è Ny√°ri Le√°raz√°s',color:'linear-gradient(90deg,#f59e0b,#f97316)',textColor:'#fff',mult:1.5,dur:45},
  {name:'üéÑ Kar√°csonyi L√°z',color:'linear-gradient(90deg,#dc2626,#16a34a)',textColor:'#fff',mult:2.0,dur:40},
  {name:'üì¶ Black Friday',color:'linear-gradient(90deg,#111,#333)',textColor:'#fbbf24',mult:3.0,dur:25},
  {name:'üíê Any√°k Napja',color:'linear-gradient(90deg,#ec4899,#f472b6)',textColor:'#fff',mult:1.8,dur:35},
  {name:'üê£ H√∫sv√©ti Akci√≥',color:'linear-gradient(90deg,#a3e635,#4ade80)',textColor:'#166534',mult:1.6,dur:35},
  {name:'üíò Valentin-nap',color:'linear-gradient(90deg,#e11d48,#fb7185)',textColor:'#fff',mult:1.7,dur:30},
  {name:'üéí Iskolakezd√©s',color:'linear-gradient(90deg,#2563eb,#7c3aed)',textColor:'#fff',mult:1.5,dur:35},
  {name:'üåô √âjszakai V√°s√°r',color:'linear-gradient(90deg,#1e1b4b,#312e81)',textColor:'#a5b4fc',mult:2.5,dur:20},
];
let currentSeason=null,seasonMultiplier=1,seasonTimer=null,seasonCooldown=null,seasonStart=0,seasonDur=0;
const seasonBox=document.getElementById('seasonBox');
const seasonTitleEl=document.getElementById('seasonTitle');
const seasonDescEl=document.getElementById('seasonDesc');
const seasonMultEl=document.getElementById('seasonMult');
const seasonFillEl=document.getElementById('seasonFill');
const seasonTimerEl=document.getElementById('seasonTimer');

function updateSeasonBar(){
  if(!currentSeason) return;
  const elapsed=(Date.now()-seasonStart)/1000;
  const remaining=Math.max(0,seasonDur-elapsed);
  const pct=Math.max(0,(remaining/seasonDur)*100);
  seasonFillEl.style.width=pct+'%';
  seasonTimerEl.textContent=Math.ceil(remaining)+' mp h√°tra';
  if(remaining>0) requestAnimationFrame(updateSeasonBar);
}

function startSeason(){
  const s=seasons[Math.floor(Math.random()*seasons.length)];
  currentSeason=s;seasonMultiplier=s.mult;seasonStart=Date.now();seasonDur=s.dur;
  seasonTitleEl.textContent=s.name;
  seasonDescEl.textContent='Bev√©tel szorz√≥ akt√≠v!';
  seasonMultEl.textContent='√ó'+s.mult;
  seasonFillEl.style.width='100%';
  seasonBox.classList.add('visible');
  addLog(`${s.name} ‚Äî bev√©tel <span>√ó${s.mult}</span>!`);
  showPopup(s.name.split(' ')[0],s.name.replace(/^.\s/,''),'Bev√©tel √ó'+s.mult+' '+s.dur+' mp-ig!','üóìÔ∏è Szezon');
  recalcPerSecond();
  requestAnimationFrame(updateSeasonBar);
  if(seasonTimer) clearTimeout(seasonTimer);
  seasonTimer=setTimeout(endSeason,s.dur*1000);
}
function endSeason(){
  seasonMultiplier=1;currentSeason=null;
  seasonBox.classList.remove('visible');
  recalcPerSecond();
  scheduleSeason();
}
function scheduleSeason(){
  const wait=60000+Math.random()*60000; // 60-120s
  if(seasonCooldown) clearTimeout(seasonCooldown);
  seasonCooldown=setTimeout(startSeason,wait);
}
scheduleSeason();

