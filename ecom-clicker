let reviewList=[];
let reviewTimer=null;
let reviewUnread=0;
let currentRightTab='achievements';
const reviewDates=['ma','tegnap','2 napja','3 napja','ezen a h√©ten','m√∫lt h√©ten'];

function playReviewSound(){
  if(!soundOn) return;
  try{
    const ctx=new AudioCtx();
    const o=ctx.createOscillator();const g=ctx.createGain();
    o.connect(g);g.connect(ctx.destination);
    o.frequency.setValueAtTime(880,ctx.currentTime);
    o.frequency.exponentialRampToValueAtTime(1320,ctx.currentTime+0.08);
    o.frequency.exponentialRampToValueAtTime(1760,ctx.currentTime+0.15);
    o.type='sine';g.gain.setValueAtTime(0.08,ctx.currentTime);
    g.gain.exponentialRampToValueAtTime(0.001,ctx.currentTime+0.3);
    o.start(ctx.currentTime);o.stop(ctx.currentTime+0.3);
  }catch(e){}
}

function updateReviewBadge(){
  const b=document.getElementById('reviewBadge');
  b.textContent=reviewUnread;
  b.classList.toggle('visible',reviewUnread>0);
}

function generateReview(){
  const tier=reviewsByTier.find(t=>totalEarned>=t.min && totalEarned<t.max)||reviewsByTier[reviewsByTier.length-1];
  const template=tier.reviews[Math.floor(Math.random()*tier.reviews.length)];
  const name=reviewNames[Math.floor(Math.random()*reviewNames.length)];
  const avatar=reviewAvatars[Math.floor(Math.random()*reviewAvatars.length)];
  const date=reviewDates[Math.floor(Math.random()*reviewDates.length)];
  const stars='‚≠ê'.repeat(template.s)+'‚òÜ'.repeat(5-template.s);
  return {name,avatar,stars,text:template.t,date,score:template.s};
}

function addReview(){
  const r=generateReview();
  reviewList.unshift(r);
  if(reviewList.length>20) reviewList.pop();
  renderReviews();
  playReviewSound();
  if(currentRightTab!=='reviews'){
    reviewUnread++;
    updateReviewBadge();
    const btn=document.querySelector('.panel-right .tab-btn[onclick="switchRightTab(\'reviews\')"]');
    btn.classList.remove('has-new');
    void btn.offsetWidth;
    btn.classList.add('has-new');
  }
}

function renderReviews(){
  const el=document.getElementById('reviews');
  if(!reviewList.length){
    el.innerHTML='<div style="text-align:center;padding:20px;color:var(--muted);font-size:.72rem;font-weight:600">M√©g nincsenek v√©lem√©nyek...<br>J√°tssz egy kicsit √©s j√∂nnek!</div>';
    return;
  }
  el.innerHTML=reviewList.map(r=>`
    <div class="review">
      <div class="review-header">
        <div class="review-name">${r.avatar} ${r.name}</div>
        <div class="review-stars">${r.stars}</div>
      </div>
      <div class="review-text">‚Äû${r.text}"</div>
      <div class="review-date">${r.date}</div>
    </div>
  `).join('');
}

// Generate reviews periodically - faster when more income
function scheduleReview(){
  const interval=Math.max(8000, 25000 - Math.min(15000, Math.log10(Math.max(1,totalEarned))*2000));
  reviewTimer=setTimeout(()=>{
    if(totalEarned>0) addReview();
    scheduleReview();
  },interval);
}
scheduleReview();
renderReviews();

// === Customer visualization ===
const customerEmojis=['üßë','üë©','üë®','üßí','üëµ','üë¥','üë©‚Äçüíº','üë®‚Äçüíº','üßë‚Äçüíª','üë©‚Äçüé§','üë®‚Äçüç≥','üßë‚Äçüè´','üë∑','üíÅ','üôã','ü§∑','üë©‚Äçü¶∞','üë®‚Äçü¶±','üë©‚Äçü¶≥','üßî'];
const customerItems=['üõçÔ∏è','üì¶','üéÅ','üëú','üõí','üí≥','üì±','üëü','üëó','üß∏','üìö','üéÆ','üíÑ','üß¥','üç´'];
const customerSayings=[
  'Kir√°ly!','Ezt vettem!','J√≥ bolt!','Aj√°nlom!','Wow!','Olcs√≥!','Szuper!','Kell!',
  'Im√°dom!','Meg√©ri!','Visszaj√∂v√∂k!','5 csillag!','Top!','Brut√°l!','Na ez az!',
  'H√∫ de j√≥!','Ezt kerestem!','Pakold be!','Viszem!','Le√°raz√°s?!','üòç','üî•','üíØ'
];
const custLayer=document.getElementById('customerLayer');
let custTotal=0;

function spawnCustomer(){
  const c=document.createElement('div');
  const fromLeft=Math.random()>.5;
  c.className='customer '+(fromLeft?'from-left':'from-right');
  const emoji=customerEmojis[Math.floor(Math.random()*customerEmojis.length)];
  const item=customerItems[Math.floor(Math.random()*customerItems.length)];
  const say=customerSayings[Math.floor(Math.random()*customerSayings.length)];
  const dur=6+Math.random()*6;
  const bottom=5+Math.random()*25;
  c.style.setProperty('--dur',dur+'s');
  c.style.bottom=bottom+'%';
  c.innerHTML=`<span class="c-bubble">${say}</span><span class="c-body">${emoji}${item}</span>`;
  custLayer.appendChild(c);
  custTotal++;
  document.getElementById('customerCounter').textContent='üë• V√°s√°rl√≥k: '+custTotal;
  setTimeout(()=>c.remove(),dur*1000+200);
}

// Spawn customers based on income rate
let custTimer=null;
function updateCustomerRate(){
  if(custTimer) clearInterval(custTimer);
  const totalWorkers=workers.reduce((s,w)=>s+w.count,0);
  if(totalWorkers<=0 && perSecond<=0) return;
  // More workers = more frequent customers, cap at ~every 400ms
  const interval=Math.max(400, 3000 - totalWorkers*80);
  custTimer=setInterval(spawnCustomer,interval);
}
// Also spawn on click
let clickCustCounter=0;

// === Save / Load ===
function saveGame(){
  const save={
    money,totalEarned,totalClicks,clickValue,
    prestigeLevel,prestigeMultiplier,prestizs,rivalsDefeated,
    workers:workers.map(w=>w.count),
    upgrades:upgrades.map(u=>u.bought),
    luxury:luxuryItems.map(l=>l.bought),
    rivals:rivals.map(r=>r.defeated),
    achievements:achievements.map(a=>a.done),
    ts:Date.now()
  };
  try{
    localStorage.setItem('webshopClickerSave',JSON.stringify(save));
    showPopup('üíæ','J√°t√©k mentve!','√Åll√°sod biztons√°gban van.','üíæ Ment√©s');
    addLog('üíæ J√°t√©k <span>elmentve</span>!');
  }catch(e){
    addLog('‚ùå Ment√©s <span>sikertelen</span>!');
  }
}
function loadGame(){
  try{
    const raw=localStorage.getItem('webshopClickerSave');
    if(!raw) return false;
    const s=JSON.parse(raw);
    money=s.money||0;totalEarned=s.totalEarned||0;totalClicks=s.totalClicks||0;
    clickValue=s.clickValue||10;prestigeLevel=s.prestigeLevel||0;
    prestigeMultiplier=s.prestigeMultiplier||1;
    if(s.workers) s.workers.forEach((c,i)=>{if(workers[i])workers[i].count=c});
    if(s.upgrades) s.upgrades.forEach((b,i)=>{if(upgrades[i])upgrades[i].bought=b});
    if(s.luxury) s.luxury.forEach((b,i)=>{if(luxuryItems[i])luxuryItems[i].bought=b});
    if(s.rivals) s.rivals.forEach((d,i)=>{if(rivals[i])rivals[i].defeated=d});
    rivalsDefeated=s.rivalsDefeated||0;
    prestizs=s.prestizs||0;
    if(s.achievements) s.achievements.forEach((d,i)=>{if(achievements[i])achievements[i].done=d});
    recalcPerSecond();
    return true;;
  }catch(e){return false}
}

// Auto-save every 30 seconds
setInterval(()=>{
  try{
    const save={money,totalEarned,totalClicks,clickValue,prestigeLevel,prestigeMultiplier,prestizs,rivalsDefeated,
      workers:workers.map(w=>w.count),upgrades:upgrades.map(u=>u.bought),
      luxury:luxuryItems.map(l=>l.bought),rivals:rivals.map(r=>r.defeated),
      achievements:achievements.map(a=>a.done),ts:Date.now()};
    localStorage.setItem('webshopClickerSave',JSON.stringify(save));
  }catch(e){}
},30000);

// Try loading on start
const loaded=loadGame();

renderAll();renderAchievements();updateProgress();
if(loaded){
  addLog('üíæ Kor√°bbi <span>ment√©s bet√∂ltve</span>!');
  addLog('üõí Folytasd ahol abbahagytad!');
}else{
  addLog('üéâ √údv√∂z√∂llek a <span>Webshop Clicker Game</span>-ben!');
  addLog('üõí Kattints a kos√°rra a bev√©tel szerz√©s√©hez!');
}

// === Tooltip system ===
const tooltip=document.getElementById('gameTooltip');
const ttTitle=document.getElementById('ttTitle');
const ttDesc=document.getElementById('ttDesc');
const ttRule=document.getElementById('ttRule');
let ttVisible=false;

function showTooltip(el,e){
  const t=el.dataset.ttTitle||'';
  const d=el.dataset.ttDesc||'';
  const r=el.dataset.ttRule||'';
  if(!t&&!d) return;
  ttTitle.innerHTML=t;ttDesc.innerHTML=d;
  ttRule.innerHTML=r;ttRule.style.display=r?'block':'none';
  const center=document.querySelector('.center');
  const cr=center.getBoundingClientRect();
  tooltip.style.left=(cr.left+16)+'px';tooltip.style.top=(cr.top+16)+'px';
  tooltip.classList.add('visible');ttVisible=true;
}
function positionTooltip(e){}
function hideTooltip(){tooltip.classList.remove('visible');ttVisible=false}

document.addEventListener('mousemove',(e)=>{
  if(!ttVisible) return;
  positionTooltip(e);
});

// Attach to all [data-tt-title] elements
function initTooltips(){
  document.querySelectorAll('[data-tt-title]').forEach(el=>{
    el.addEventListener('mouseenter',(e)=>showTooltip(el,e));
    el.addEventListener('mouseleave',hideTooltip);
  });
}

