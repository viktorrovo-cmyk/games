// === Helpers ===
function fmt(n){
  if(n>=1e12)return(n/1e12).toFixed(1)+' B';if(n>=1e9)return(n/1e9).toFixed(1)+' Mrd';
  if(n>=1e6)return(n/1e6).toFixed(1)+' M';if(n>=1e3)return Math.floor(n).toLocaleString('hu-HU');
  return Math.floor(n).toString();
}
function workerCost(w){return Math.floor(w.baseCost*Math.pow(w.costMult,w.count))}
function workerIncome(w){return Math.floor(w.baseIncome*prestigeMultiplier)}
function recalcPerSecond(){perSecond=workers.reduce((s,w)=>s+w.count*workerIncome(w),0);const display=seasonMultiplier>1?fmt(Math.floor(perSecond*seasonMultiplier))+' Ft/mp (√ó'+seasonMultiplier+')':fmt(perSecond)+' Ft/mp';document.getElementById('perSec').textContent='+'+display;updateCustomerRate()}

function updateProgress(){
  const next=achievements.find(a=>!a.done);
  const label=document.getElementById('progressLabel'),fill=document.getElementById('progressFill');
  if(!next){label.textContent='üéâ Minden m√©rf√∂ldk≈ë el√©rve!';fill.style.width='100%';return}
  label.textContent='K√∂vetkez≈ë: '+next.name;let cur=0;
  if(next.metric==='clicks')cur=totalClicks;else if(next.metric==='earned')cur=totalEarned;
  else if(next.metric==='workers')cur=workers.reduce((s,w)=>s+w.count,0);else if(next.metric==='prestige')cur=prestigeLevel;
  else if(next.metric==='rovo')cur=workers.find(w=>w.id==='rovo').count;
  fill.style.width=Math.min(100,(cur/next.target)*100)+'%';
}

function getPrestigeMultiplier(l){return 1+l*.5}
function updatePrestigeUI(){
  document.getElementById('prestigeLvl').textContent=prestigeLevel+' ‚≠ê';
  document.getElementById('prestigeBonus').textContent='√ó'+prestigeMultiplier.toFixed(1);
  const btn=document.getElementById('prestigeBtn'),info=document.getElementById('prestigeInfo');
  if(totalEarned>=PRESTIGE_THRESHOLD){btn.classList.add('visible');info.classList.add('visible');info.textContent='K√∂vetkez≈ë szorz√≥: √ó'+getPrestigeMultiplier(prestigeLevel+1).toFixed(1)}
  else{btn.classList.remove('visible');info.classList.remove('visible')}
}
function confirmPrestige(){
  document.getElementById('ppBonus').textContent='√ó'+prestigeMultiplier.toFixed(1)+' ‚Üí √ó'+getPrestigeMultiplier(prestigeLevel+1).toFixed(1);
  document.getElementById('prestigePopup').classList.add('show');document.getElementById('overlay').classList.add('show');
}
function closePrestige(){document.getElementById('prestigePopup').classList.remove('show');document.getElementById('overlay').classList.remove('show')}
function doPrestige(){
  closePrestige();playPrestige();spawnConfettiBurst();spawnConfettiBurst();spawnMegaSpin();
  prestigeLevel++;prestigeMultiplier=getPrestigeMultiplier(prestigeLevel);
  money=0;totalEarned=0;totalClicks=0;clickValue=Math.floor(10*prestigeMultiplier);
  workers.forEach(w=>w.count=0);upgrades.forEach(u=>u.bought=false);recalcPerSecond();updatePrestigeUI();
  addLog(`‚≠ê <span>Franchise #${prestigeLevel}</span> elind√≠tva! Szorz√≥: √ó${prestigeMultiplier.toFixed(1)}`);
  showPopup('‚≠ê','Franchise #'+prestigeLevel,'Szorz√≥: √ó'+prestigeMultiplier.toFixed(1),'üîÑ Franchise');
  renderAll();renderAchievements();checkAchievements();
}

// === Render ===
function renderWorkers(){
  document.getElementById('workers').innerHTML=workers.map(w=>{
    const cost=workerCost(w),locked=money<cost,isRovo=w.id==="rovo";
    const eff=(w.baseIncome/w.baseCost*1000).toFixed(1);
    const ttTitle=`${w.icon} ${w.name.replace('<br>',' ')}`;
    const ttDesc=`${w.desc} Alap hozam: ${fmt(w.baseIncome)} Ft/mp. Jelenlegi: ${fmt(workerIncome(w))} Ft/mp.`;
    const ttRule=`√År n√∂veked√©s: √ó${w.costMult}/db. √ñsszesen: ${w.count} db ‚Üí ${fmt(w.count*workerIncome(w))} Ft/mp. Hat√©konys√°g: ${eff} Ft/mp per 1000 Ft.`;
    return `<div class="upgrade ${locked?'locked':''}${isRovo?' rovo-gold':''}" onclick="buyWorker('${w.id}')"
      data-tt-title="${ttTitle}" data-tt-desc="${ttDesc}" data-tt-rule="${ttRule}">
      <div class="upgrade-icon">${w.icon}</div>
      <div class="upgrade-mid">
        <div class="upgrade-name">${w.name}</div>
        <div class="upgrade-desc">${w.desc}</div>
        <div class="upgrade-desc" style="color:var(--green);font-weight:700">+${fmt(workerIncome(w))} Ft/mp</div>
      </div>
      <div class="upgrade-right">
        <div class="upgrade-cost">${fmt(cost)} Ft</div>
        <div class="upgrade-count ${w.count>0?'visible':''}">${w.count}√ó</div>
      </div>
    </div>`;
  }).join('');
  initTooltips();
}
function renderUpgrades(){
  document.getElementById('upgrades').innerHTML=upgrades.map(u=>{
    const locked=!u.bought&&money<u.cost,cls=u.bought?'bought':(locked?'locked':'');
    const ttTitle=`${u.icon} ${u.name}`;
    const ttDesc=u.bought?'M√°r megv√°s√°rolva! Akt√≠v szorz√≥: √ó'+u.mult+'.':`${u.desc} A kattint√°sod √©rt√©k√©t szorozza √ó${u.mult}-tel.`;
    const allMults=upgrades.filter(x=>x.bought).reduce((s,x)=>s+x.mult,0);
    const ttRule=u.bought?'A fejleszt√©sek szorz√≥i √∂sszead√≥dnak! Jelenlegi √∂ssz: √ó'+allMults+'. Franchise-kor elvesznek.':(u.cost===0?'Ingyenes! A szorz√≥k √∂sszead√≥dnak a t√∂bbi fejleszt√©ssel.':'√År: '+fmt(u.cost)+' Ft. A szorz√≥k √∂sszead√≥dnak! Franchise-kor elvesznek.');
    return `<div class="upgrade ${cls}" onclick="${u.bought?'':'buyUpgrade(\''+u.id+'\')'}"
      data-tt-title="${ttTitle}" data-tt-desc="${ttDesc}" data-tt-rule="${ttRule}">
      <div class="upgrade-icon">${u.icon}</div>
      <div class="upgrade-mid">
        <div class="upgrade-name">${u.name}</div>
        <div class="upgrade-desc">${u.bought?'‚úì Megv√°s√°rolva':u.desc}</div>
      </div>
      <div class="upgrade-right">
        <div class="upgrade-cost">${u.bought?'‚Äî':fmt(u.cost)+' Ft'}</div>
      </div>
    </div>`;
  }).join('');
  initTooltips();
}
function renderAchievements(){
  document.getElementById('achievements').innerHTML=achievements.map(a=>{
    const ttTitle=`${a.done?a.icon:'üîí'} ${a.name}`;
    const ttDesc=a.desc;
    const ttRule=a.done?'‚úÖ Teljes√≠tve!':'C√©l: '+fmt(a.target)+' '+(a.metric==='clicks'?'kattint√°s':a.metric==='earned'?'Ft √∂sszkereseted':a.metric==='workers'?'alkalmazott':a.metric==='prestige'?'franchise szint':a.metric==='rovo'?'Rov√≥ konzult√°ci√≥':a.metric);
    return `<div class="achievement ${a.done?'unlocked':''}"
      data-tt-title="${ttTitle}" data-tt-desc="${ttDesc}" data-tt-rule="${ttRule}">
      <div class="achievement-icon">${a.done?a.icon:'üîí'}</div>
      <div class="achievement-info"><div class="achievement-name">${a.name}</div><div class="achievement-desc">${a.desc}</div></div>
    </div>`;
  }).join('');
  initTooltips();
}
function renderLuxury(){
  document.getElementById('luxury').innerHTML=luxuryItems.map(l=>{
    const locked=!l.bought&&money<l.cost;
    const cls=l.bought?'bought luxury-item':(locked?'locked luxury-item':'luxury-item');
    const ttTitle=`${l.icon} ${l.name}`;
    const ttDesc=`${l.desc} Preszt√≠zs: +${l.prestige} pont.`;
    const ttRule=l.bought?'‚úÖ Megv√°s√°rolva! Franchise-kor megmarad.':'√År: '+fmt(l.cost)+' Ft. Permanens ‚Äî franchise-kor NEM veszik el!';
    return `<div class="upgrade ${cls}" onclick="${l.bought?'':'buyLuxury(\''+l.id+'\')'}"
      data-tt-title="${ttTitle}" data-tt-desc="${ttDesc}" data-tt-rule="${ttRule}">
      <div class="upgrade-icon">${l.icon}</div>
      <div class="upgrade-mid">
        <div class="upgrade-name">${l.bought?'‚úì ':''} ${l.name}</div>
        <div class="upgrade-desc">${l.desc}</div>
        <div class="prestige-badge">üëë +${l.prestige} preszt√≠zs</div>
      </div>
      <div class="upgrade-right">
        <div class="upgrade-cost">${l.bought?'Tied!':fmt(l.cost)+' Ft'}</div>
      </div>
    </div>`;
  }).join('');
  initTooltips();
}
function buyLuxury(id){
  const l=luxuryItems.find(x=>x.id===id);
  if(money<l.cost||l.bought) return;
  money-=l.cost;l.bought=true;prestizs+=l.prestige;
  playBuy();spawnConfettiBurst();spawnConfettiBurst();
  addLog(`${l.icon} Luxus: <span>${l.name}</span> ‚Äî üëë +${l.prestige} preszt√≠zs`);
  showPopup(l.icon,l.name,'üëë +'+l.prestige+' preszt√≠zs','üëë Luxus');
  renderAll();
}
function updatePrestizs(){
  document.getElementById('prestizsValue').textContent=prestizs+' üëë';
  const container=document.getElementById('luxuryIcons');
  const bought=luxuryItems.filter(l=>l.bought);
  container.innerHTML=bought.map(l=>`<span class="lux-icon" data-name="${l.name}" title="${l.name}">${l.icon}</span>`).join('');
}
function addLog(msg){
  const el=document.getElementById('log'),d=document.createElement('div');
  d.className='log-entry';d.innerHTML=msg;el.prepend(d);
  if(el.children.length>40)el.removeChild(el.lastChild);
  if(!menuOpen){logUnread++;updateLogBadge()}
}

function buyWorker(id){
  const w=workers.find(x=>x.id===id),cost=workerCost(w);if(money<cost)return;
  money-=cost;w.count++;playBuy();recalcPerSecond();
  addLog(`${w.icon} Felv√©ve: <span>${w.name}</span> (${w.count}. db)`);renderAll();
}
function buyUpgrade(id){
  const u=upgrades.find(x=>x.id===id);if(money<u.cost||u.bought)return;
  money-=u.cost;u.bought=true;clickValue=Math.floor(clickValue*u.mult);playBuy();
  addLog(`${u.icon} Fejleszt√©s: <span>${u.name}</span> ‚Äî kattint√°s: ${fmt(clickValue)} Ft`);
  spawnConfettiBurst();renderAll();
}
function checkAchievements(){
  achievements.forEach(a=>{if(!a.done&&a.check()){
    a.done=true;playAchievement();spawnConfettiBurst();
    showPopup(a.icon,a.name,a.desc);addLog(`üèÜ M√©rf√∂ldk≈ë: <span>${a.name}</span>`);renderAchievements();
  }});updateProgress();updatePrestigeUI();
}
const congratsMessages=[
  'Gratul√°lok!','Sz√©p munka!','Fantasztikus!','Meg√©rdemelted!','√çgy kell ezt!',
  'H√∫√∫√∫, kir√°ly!','√úgyes vagy!','Na EEEEZ az!','Brut√°lis!','Respect!',
  'Hatalmas!','Micsoda teljes√≠tm√©ny!','Bomba!','Zseni√°lis!','Elk√©peszt≈ë!'
];
function showPopup(icon,title,desc,label){
  const track=document.getElementById('bannerTrack');
  const congrats=congratsMessages[Math.floor(Math.random()*congratsMessages.length)];
  const tag=label||'üèÜ M√©rf√∂ldk≈ë';
  const b=document.createElement('div');
  b.className='banner';
  // Stack: count existing banners and offset
  const existing=track.querySelectorAll('.banner');
  const offset=6+existing.length*48;
  b.style.top=offset+'px';
  b.innerHTML=`<span class="b-icon">${icon}</span><span class="b-text"><span class="b-label">${tag}</span><span class="b-title">${congrats}</span><span class="b-sep">‚Äî</span><span class="b-desc">${title}: ${desc}</span></span>`;
  track.appendChild(b);
  setTimeout(()=>b.remove(),10500);
}
function updateDisplay(){
  document.getElementById('money').textContent=fmt(money)+' Ft';
  document.getElementById('totalClicks').textContent=fmt(totalClicks);
  document.getElementById('totalEarned').textContent=fmt(totalEarned)+' Ft';
}
function renderAll(){updateDisplay();renderWorkers();renderUpgrades();renderLuxury();renderRivals();updateProgress();updatePrestigeUI();updatePrestizs()}

// === Click ===
const cartBtn=document.getElementById('cartBtn'),center=document.querySelector('.center');
function spawnFloat(x,y,val){
  const el=document.createElement('div');el.className='float-num';el.textContent='+'+fmt(val)+' Ft';
  el.style.left=(x+(Math.random()-.5)*60)+'px';el.style.top=(y-30)+'px';
  center.appendChild(el);setTimeout(()=>el.remove(),900);
}
function spawnParticles(x,y){
  const colors=['#2563eb','#3b82f6','#60a5fa','#93c5fd','#10b981','#a855f7','#f59e0b'];
  for(let i=0;i<12;i++){
    const p=document.createElement('div');p.className='particle';
    const angle=Math.random()*Math.PI*2,dist=40+Math.random()*80,size=4+Math.random()*7;
    p.style.width=size+'px';p.style.height=size+'px';
    p.style.setProperty('--dx',Math.cos(angle)*dist+'px');p.style.setProperty('--dy',Math.sin(angle)*dist+'px');
    p.style.background=colors[Math.floor(Math.random()*colors.length)];
    p.style.left=x+'px';p.style.top=y+'px';
    center.appendChild(p);setTimeout(()=>p.remove(),800);
  }
}
const cartWrap=document.getElementById('cartWrap');
function spawnClickEffects(){
  // Expanding ring
  const ring=document.createElement('div');
  ring.className='click-ring';
  ring.style.left='50%';ring.style.top='50%';
  cartWrap.appendChild(ring);
  setTimeout(()=>ring.remove(),600);
  // Sparkles
  const sparkleColors=['#fbbf24','#60a5fa','#a78bfa','#34d399','#f472b6','#fb923c','#fff'];
  for(let i=0;i<12;i++){
    const s=document.createElement('div');
    s.className='click-sparkle';
    const angle=(i/12)*Math.PI*2;
    const dist=50+Math.random()*40;
    s.style.setProperty('--sx',Math.cos(angle)*dist+'px');
    s.style.setProperty('--sy',Math.sin(angle)*dist+'px');
    s.style.left='50%';s.style.top='50%';
    s.style.background=sparkleColors[Math.floor(Math.random()*sparkleColors.length)];
    s.style.boxShadow='0 0 6px '+sparkleColors[Math.floor(Math.random()*sparkleColors.length)];
    cartWrap.appendChild(s);
    setTimeout(()=>s.remove(),700);
  }
  // Stars
  const starEmojis=['‚ú®','üí´','‚ö°','üí∞','ü™ô','‚ú¶'];
  for(let i=0;i<4;i++){
    const st=document.createElement('div');
    st.className='click-star';
    const angle=Math.random()*Math.PI*2;
    const dist=30+Math.random()*30;
    st.style.setProperty('--sx',Math.cos(angle)*dist+'px');
    st.style.setProperty('--sy',Math.sin(angle)*dist-20+'px');
    st.style.left='50%';st.style.top='50%';
    st.textContent=starEmojis[Math.floor(Math.random()*starEmojis.length)];
    cartWrap.appendChild(st);
    setTimeout(()=>st.remove(),800);
  }
}

cartBtn.addEventListener('click',(e)=>{
  const cv=clickValue*seasonMultiplier;money+=cv;totalEarned+=cv;totalClicks++;playClick();
  const rect=center.getBoundingClientRect();
  spawnFloat(e.clientX-rect.left,e.clientY-rect.top,cv);
  spawnParticles(e.clientX-rect.left,e.clientY-rect.top);
  spawnClickEffects();
  cartBtn.classList.add('clicked');setTimeout(()=>cartBtn.classList.remove('clicked'),100);
  clickEventCounter++;
  if(clickEventCounter%3===0) spawnCustomer();
  if(clickEventCounter%5===0) spawnSurpriseEmoji();
  if(clickEventCounter%20===0) spawnConfettiBurst();
  if(clickEventCounter%50===0) spawnMegaSpin();
  updateDisplay();checkAchievements();
});

// === Loop ===
let lastTick=performance.now();
function gameLoop(now){const dt=(now-lastTick)/1000;lastTick=now;if(perSecond>0){const e=perSecond*seasonMultiplier*dt;money+=e;totalEarned+=e}updateDisplay();requestAnimationFrame(gameLoop)}
requestAnimationFrame(gameLoop);
setInterval(()=>{renderWorkers();renderUpgrades();renderLuxury();renderRivals();checkAchievements()},500);

