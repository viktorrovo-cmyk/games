<script>
// === INTENSE Background ===
(function(){
  const emojis=['üí∞','ü™ô','üíµ','üì¶','üõçÔ∏è','üéÅ','üí≥','üõí','üöÄ','üíé','üëë','üè¶','üìà','ü§ë','üé∞'];
  const c=document.getElementById('bgCoins');
  for(let i=0;i<25;i++){
    const d=document.createElement('div');d.className='bg-coin';
    d.textContent=emojis[Math.floor(Math.random()*emojis.length)];
    d.style.left=Math.random()*100+'%';
    d.style.fontSize=(1.2+Math.random()*2)+'rem';
    d.style.animationDuration=(10+Math.random()*20)+'s';
    d.style.animationDelay=(-Math.random()*25)+'s';
    c.appendChild(d);
  }
})();

// Surprise events
const surpriseEmojis=['üöÄ','üíé','üëë','ü§ë','üéâ','ü¶Ñ','üåà','üé∞','üí∏','üèÜ','üé™','ü§Ø','ü´†','üò±','üíÄ','üî•','üçï','üëΩ','üê∏','ü¶ä'];
const megaEmojis=['ü§ë','üí∏','üöÄ','üëë','ü¶Ñ','üåà','üé∞','ü§Ø'];

function spawnSurpriseEmoji(){
  const el=document.createElement('div');el.className='surprise-emoji';
  el.textContent=surpriseEmojis[Math.floor(Math.random()*surpriseEmojis.length)];
  el.style.setProperty('--sx',(Math.random()*80+10)+'vw');
  el.style.setProperty('--sy',(Math.random()*80+10)+'vh');
  el.style.setProperty('--ex',(Math.random()*80+10)+'vw');
  el.style.setProperty('--ey',(Math.random()*80+10)+'vh');
  document.body.appendChild(el);setTimeout(()=>el.remove(),2500);
}

function spawnShootingStar(){
  const el=document.createElement('div');el.className='shooting-star';
  const angle=-30+Math.random()*-30;
  el.style.setProperty('--sx2',(Math.random()*100)+'vw');
  el.style.setProperty('--sy2',(Math.random()*50)+'vh');
  el.style.setProperty('--dx2',(300+Math.random()*400)+'px');
  el.style.setProperty('--dy2',(150+Math.random()*200)+'px');
  el.style.setProperty('--angle',angle+'deg');
  el.style.width=(60+Math.random()*80)+'px';
  document.body.appendChild(el);setTimeout(()=>el.remove(),1200);
}

function spawnConfettiBurst(){
  const colors=['#2563eb','#3b82f6','#60a5fa','#a855f7','#ec4899','#10b981','#f59e0b','#f43f5e'];
  const cx=Math.random()*80+10,cy=Math.random()*60+10;
  for(let i=0;i<30;i++){
    const c=document.createElement('div');c.className='confetti';
    c.style.left=cx+'vw';c.style.top=cy+'vh';
    c.style.background=colors[Math.floor(Math.random()*colors.length)];
    c.style.width=(4+Math.random()*8)+'px';c.style.height=(4+Math.random()*8)+'px';
    c.style.borderRadius=Math.random()>.5?'50%':'2px';
    const a=Math.random()*Math.PI*2,d=80+Math.random()*200;
    c.style.setProperty('--cx',Math.cos(a)*d+'px');
    c.style.setProperty('--cy',(Math.sin(a)*d-100)+'px');
    document.body.appendChild(c);setTimeout(()=>c.remove(),3000);
  }
}

function spawnMegaSpin(){
  const el=document.createElement('div');el.className='mega-spin';
  el.textContent=megaEmojis[Math.floor(Math.random()*megaEmojis.length)];
  document.body.appendChild(el);setTimeout(()=>el.remove(),3000);
}

// Random background events
function randomBgEvent(){
  const r=Math.random();
  if(r<.3) spawnSurpriseEmoji();
  else if(r<.5) spawnShootingStar();
  else if(r<.7){spawnSurpriseEmoji();spawnSurpriseEmoji()}
  else if(r<.85) spawnConfettiBurst();
  else{spawnMegaSpin();spawnConfettiBurst()}
}
setInterval(randomBgEvent,2500+Math.random()*2000);
// Also on clicks (every 5th)
let clickEventCounter=0;

