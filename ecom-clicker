const AudioCtx=window.AudioContext||window.webkitAudioContext;
let audioCtx=null,soundOn=true;
function ensureAudio(){if(!audioCtx)audioCtx=new AudioCtx();if(audioCtx.state==='suspended')audioCtx.resume()}
function playClick(){
  if(!soundOn)return;ensureAudio();const now=audioCtx.currentTime;
  const g=audioCtx.createGain();g.connect(audioCtx.destination);g.gain.setValueAtTime(.12,now);g.gain.linearRampToValueAtTime(.001,now+.12);
  const o1=audioCtx.createOscillator();o1.type='sine';o1.frequency.setValueAtTime(1200,now);o1.frequency.linearRampToValueAtTime(1800,now+.04);o1.connect(g);o1.start(now);o1.stop(now+.06);
  const g2=audioCtx.createGain();g2.connect(audioCtx.destination);g2.gain.setValueAtTime(.1,now+.05);g2.gain.linearRampToValueAtTime(.001,now+.15);
  const o2=audioCtx.createOscillator();o2.type='sine';o2.frequency.setValueAtTime(1800,now+.05);o2.frequency.linearRampToValueAtTime(2400,now+.1);o2.connect(g2);o2.start(now+.05);o2.stop(now+.15);
}
function playBuy(){
  if(!soundOn)return;ensureAudio();const now=audioCtx.currentTime;
  const g=audioCtx.createGain();g.connect(audioCtx.destination);g.gain.setValueAtTime(.1,now);g.gain.linearRampToValueAtTime(.001,now+.2);
  const o=audioCtx.createOscillator();o.type='triangle';o.frequency.setValueAtTime(600,now);o.frequency.linearRampToValueAtTime(900,now+.1);o.frequency.linearRampToValueAtTime(1200,now+.18);o.connect(g);o.start(now);o.stop(now+.2);
}
function playAchievement(){
  if(!soundOn)return;ensureAudio();const now=audioCtx.currentTime;
  [800,1000,1200,1600].forEach((f,i)=>{const t=now+i*.08,g=audioCtx.createGain();g.connect(audioCtx.destination);g.gain.setValueAtTime(.08,t);g.gain.linearRampToValueAtTime(.001,t+.2);const o=audioCtx.createOscillator();o.type='sine';o.frequency.setValueAtTime(f,t);o.connect(g);o.start(t);o.stop(t+.2)});
}
function playPrestige(){
  if(!soundOn)return;ensureAudio();const now=audioCtx.currentTime;
  [400,600,800,1000,1200,1600].forEach((f,i)=>{const t=now+i*.1,g=audioCtx.createGain();g.connect(audioCtx.destination);g.gain.setValueAtTime(.1,t);g.gain.linearRampToValueAtTime(.001,t+.35);const o=audioCtx.createOscillator();o.type='sine';o.frequency.setValueAtTime(f,t);o.connect(g);o.start(t);o.stop(t+.35)});
}
document.getElementById('soundBtn').addEventListener('click',()=>{soundOn=!soundOn;const b=document.getElementById('soundBtn');b.textContent=soundOn?'üîä':'üîá';b.classList.toggle('on',soundOn)});

// === Menu ===
let menuOpen=false,logUnread=0;
function toggleMenu(){
  menuOpen=!menuOpen;
  document.getElementById('menuPanel').classList.toggle('open',menuOpen);
  if(menuOpen){logUnread=0;updateLogBadge()}
}
function switchMenuTab(tab){
  document.querySelectorAll('.menu-tab').forEach(b=>b.classList.remove('active'));
  document.querySelectorAll('.menu-page').forEach(p=>p.classList.remove('active'));
  document.querySelector(`.menu-page[data-menu="${tab}"]`).classList.add('active');
  document.querySelectorAll('.menu-tab').forEach(b=>{
    if(b.textContent.toLowerCase().includes(tab==='info'?'le√≠r√°s':tab==='log'?'napl√≥':'be√°ll√≠t√°s')) b.classList.add('active');
  });
  if(tab==='log'){logUnread=0;updateLogBadge()}
}
function updateLogBadge(){
  const b=document.getElementById('logBadge');
  b.textContent=logUnread;b.classList.toggle('visible',logUnread>0);
}
let resetPending=false;
function confirmReset(){
  if(!resetPending){
    resetPending=true;
    document.querySelector('.menu-action-btn.reset').textContent='‚ö†Ô∏è Biztos? Kattints √∫jra!';
    document.querySelector('.menu-action-btn.reset').style.background='#dc2626';
    document.querySelector('.menu-action-btn.reset').style.color='#fff';
    setTimeout(()=>{
      resetPending=false;
      document.querySelector('.menu-action-btn.reset').textContent='üóëÔ∏è √öj j√°t√©k ind√≠t√°sa';
      document.querySelector('.menu-action-btn.reset').style.background='#fee2e2';
      document.querySelector('.menu-action-btn.reset').style.color='#dc2626';
    },3000);
    return;
  }
  resetPending=false;
  localStorage.removeItem('webshopClickerSave');
  money=0;totalEarned=0;totalClicks=0;clickValue=10;perSecond=0;
  prestigeLevel=0;prestigeMultiplier=1;prestizs=0;custTotal=0;
  seasonMultiplier=1;currentSeason=null;
  seasonBox.classList.remove('visible');
  workers.forEach(w=>w.count=0);
  upgrades.forEach(u=>u.bought=false);
  luxuryItems.forEach(l=>l.bought=false);
  achievements.forEach(a=>a.done=false);
  rivals.forEach(r=>r.defeated=false);rivalsDefeated=0;
  reviewList=[];reviewUnread=0;updateReviewBadge();
  recalcPerSecond();
  document.getElementById('customerCounter').textContent='üë• V√°s√°rl√≥k: 0';
  document.getElementById('log').innerHTML='';
  document.querySelector('.menu-action-btn.reset').textContent='üóëÔ∏è √öj j√°t√©k ind√≠t√°sa';
  document.querySelector('.menu-action-btn.reset').style.background='#fee2e2';
  document.querySelector('.menu-action-btn.reset').style.color='#dc2626';
  renderAll();renderAchievements();renderReviews();
  addLog('üóëÔ∏è J√°t√©k <span>t√∂r√∂lve</span> ‚Äî √∫jrakezd√©s!');
  addLog('üõí Kattints a kos√°rra a bev√©tel szerz√©s√©hez!');
  showPopup('üóëÔ∏è','√öj j√°t√©k','Minden t√∂r√∂lve ‚Äî sok sikert!','üîÑ Reset');
  toggleMenu();
}

// === Tabs ===
function switchTab(tab){
  document.querySelectorAll('.panel-left .tab-btn').forEach(b=>b.classList.remove('active'));
  document.querySelectorAll('.panel-left .tab-content').forEach(c=>c.classList.remove('active'));
  document.querySelector(`.tab-content[data-tab="${tab}"]`).classList.add('active');
  document.querySelector(`.panel-left .tab-btn[onclick="switchTab('${tab}')"]`).classList.add('active');
}
function switchRightTab(tab){
  currentRightTab=tab;
  document.querySelectorAll('.panel-right .tab-btn').forEach(b=>b.classList.remove('active'));
  document.querySelectorAll('.panel-right .tab-content').forEach(c=>c.classList.remove('active'));
  document.querySelector(`.tab-content[data-rtab="${tab}"]`).classList.add('active');
  document.querySelector(`.panel-right .tab-btn[onclick="switchRightTab('${tab}')"]`).classList.add('active');
  if(tab==='reviews'){reviewUnread=0;updateReviewBadge()}
}

